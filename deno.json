{
  "tasks": {
    "start": " deno run --allow-all --unstable-sloppy-imports --no-check --import-map=import_map.json src/server.ts",
    "dev": " deno run --allow-all --watch --unstable-sloppy-imports --import-map=import_map.json src/server.ts",
    "db:init": "mkdir -p data && echo -n > data/db.testnet.sqlite && echo -n > data/db.mainnet.sqlite && echo -n > data/db.devnet.sqlite",
    "lint": " deno lint src/",
    "lint:fix": " deno lint --fix src/",
    "lint:strict": " deno lint --rules=exclude=no-console,no-unused-vars src/services/",
    "test:solana": " deno test --allow-all --no-check --unstable-sloppy-imports --import-map=import_map.json src/services/solana/test/index.test.ts",
    "test:pump": " deno test --allow-all --no-check --unstable-sloppy-imports --import-map=import_map.json src/services/pump-fun/test/index.test.ts",
    "test:jito": " deno test --allow-all --no-check --unstable-sloppy-imports --import-map=import_map.json src/services/jito/test/index.test.ts",
    "test:bot": " deno test --allow-all --no-check --unstable-sloppy-imports --import-map=import_map.json src/services/bot/test/index.test.ts"
  },
  "nodeModulesDir": "auto",
  "importMap": "import_map.json",
  "fmt": {
    "include": ["src/"]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "eqeqeq",
        "no-empty",
        "no-explicit-any",
        "no-throw-literal",
        "no-unused-vars",
        "prefer-const"
      ],
      "exclude": []
    }
  }
}
